<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_network_common"
            android:text="(Retrofit+OkHttp+RxJava)Common Url"
            style="@style/button_common_style"/>

        <Button
            android:id="@+id/btn_network_diff_url"
            android:layout_below="@+id/btn_network_common"
            android:text="(Retrofit+OkHttp+RxJava)Different Url"
            style="@style/button_common_style"/>

        <Button
            android:id="@+id/btn_network_download"
            android:layout_below="@+id/btn_network_diff_url"
            android:text="(Retrofit+OkHttp+RxJava)Download"
            style="@style/button_common_style"/>

        <Button
            android:id="@+id/btn_network_to_get"
            android:layout_below="@+id/btn_network_download"
            android:text="(Retrofit+OkHttp)Http Get"
            style="@style/button_common_style"/>

        <Button
            android:id="@+id/btn_network_httpurlconnection"
            android:layout_below="@+id/btn_network_to_get"
            android:text="(HttpURLConnection)HttpRequest + Builder"
            style="@style/button_common_style"/>

    </RelativeLayout>
</RelativeLayout>
