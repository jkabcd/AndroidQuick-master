<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/btn_ui_pagestatus_loading"
        style="@style/button_common_style"
        android:text="Loading" />

    <Button
        android:id="@+id/btn_ui_pagestatus_empty"
        style="@style/button_common_style"
        android:text="Empty" />

    <Button
        android:id="@+id/btn_ui_pagestatus_error"
        style="@style/button_common_style"
        android:text="Error" />

    <Button
        android:id="@+id/btn_ui_pagestatus_networkerror"
        style="@style/button_common_style"
        android:text="NetworkError" />
</LinearLayout>