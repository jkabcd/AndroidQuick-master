<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_tools_json"
            style="@style/button_common_style"
            android:text="Json" />

        <Button
            android:id="@+id/btn_tools_rxjava"
            style="@style/button_common_style"
            android:layout_below="@id/btn_tools_json"
            android:text="Rxjava" />

        <Button
            android:id="@+id/btn_tools_sf"
            style="@style/button_common_style"
            android:layout_below="@id/btn_tools_rxjava"
            android:text="SharedPreferences" />

        <Button
            android:id="@+id/btn_tools_more"
            style="@style/button_common_style"
            android:layout_marginTop="40dp"
            android:layout_below="@id/btn_tools_sf"
            android:text="More: AndroidUtilCode" />

    </RelativeLayout>
</RelativeLayout>
